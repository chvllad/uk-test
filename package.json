{
  "name": "ui-kit",
  "private": true,
  "version": "0.8",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./UkButton": {
      "types": "./dist/Button/Button.d.ts",
      "default": "./dist/Button/Button.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "extract-locales": "lit-localize extract",
    "build-locales": "lit-localize build",
    "test": "vitest"
  },
  "dependencies": {
    "@lit-labs/signals": "^0.1.3",
    "@lit/context": "^1.1.6",
    "@lit/localize": "^0.12.2",
    "lit": "3.3.1",
    "zxing-wasm": "2.2.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.0.1",
    "@lit-labs/compiler": "^1.1.1",
    "@lit-labs/rollup-plugin-minify-html-literals": "^0.1.0",
    "@lit/localize-tools": "^0.8.0",
    "@open-wc/eslint-config": "^12.0.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@storybook/addon-a11y": "9.0.17",
    "@storybook/addon-links": "9.0.17",
    "@storybook/web-components": "9.0.17",
    "@storybook/web-components-vite": "9.0.17",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.2",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "storybook": "9.0.17",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.17"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "src/generated/**",
      "**.stories.ts"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-undef": "off",
      "max-classes-per-file": "off",
      "default-case": "off",
      "no-console": "off",
      "class-methods-use-this": "off",
      "no-duplicate-imports": "off",
      "no-constant-condition": "off",
      "sort-imports": [
        "error",
        {
          "ignoreCase": false,
          "ignoreDeclarationSort": true,
          "ignoreMemberSort": false,
          "memberSyntaxSortOrder": [
            "none",
            "all",
            "multiple",
            "single"
          ],
          "allowSeparatedGroups": true
        }
      ],
      "@typescript-eslint/consistent-type-imports": "error",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "args": "all",
          "argsIgnorePattern": "^_",
          "caughtErrors": "all",
          "caughtErrorsIgnorePattern": "^_",
          "destructuredArrayIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }
      ],
      "prefer-destructuring": "off",
      "import/no-duplicates": "off",
      "import/no-unresolved": "off",
      "import/no-extraneous-dependencies": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ],
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            [
              "sibling",
              "parent"
            ],
            "index",
            "unknown"
          ],
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "packageManager": "yarn@4.6.0"
}
